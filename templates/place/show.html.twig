{% extends 'base.html.twig' %}

{% block title %}Place{% endblock %}

{% block body %}
    <h1>Place</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ place.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ place.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ place.Description }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ place.Adress }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ place.City }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ place.PostalCode }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ place.Latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ place.Longitude }}</td>
            </tr>
            <tr>
                <th>Notice</th>
                <td>{{ place.Notice }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ place.Status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ place.Type }}</td>
            </tr>
            <tr>
                <th>Views</th>
                <td>{{ place.Views }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_place_index') }}">back to list</a>

    <a href="{{ path('app_place_edit', {'id': place.id}) }}">edit</a>

    {{ include('place/_delete_form.html.twig') }}
{% endblock %}
