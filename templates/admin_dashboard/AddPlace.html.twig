{% extends 'admin.html.twig' %}

{% block title %}New Place{% endblock %}

{% block content %}
 <section class="w3ls-section contact py-5">
	<div class="container py-sm-3">
		<div class="w3ls-title">
			<h2 class="heading text-center mb-sm-5 mb-4">Add new Place</h2>
		</div>
		<div class="row contact_wthreerow agileits-w3layouts">
			 <div class="card-body">
               
				<h4>Place Details</h4>
				{{ form_start(p,{'attr':{'novalidate': 'novalidate'}}) }}
                 <div class="form-group">
                 <label>Place Name</label>
                        {{form_widget(p.Name,{'attr':{'class':'form-control '}})}}
                        </div>
                        <div class="form-group">
                           <label>Description</label>
                        {{form_widget(p.Description,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                           <label>Adress</label>
                        {{form_widget(p.Adress,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                           <label>City</label>
                        {{form_widget(p.City,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                           <label>Postal Code</label>
                        {{form_widget(p.PostalCode,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                           <label>Latitude</label>
                        {{form_widget(p.Latitude,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                           <label>Longitude</label>
                        {{form_widget(p.Longitude,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                           <label>Type</label>
                        {{form_widget(p.Type,{'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                           <label>Categories</label>
                        {{form_widget(p.Category,{'attr':{'class':'form-control'}})}}
                        </div>
					{#	{{form_widget(p.Attachement,{'attr':{'class':'form-control'}})}} #}
                        <div style="margin-top:5px; ">
                        {{form_widget(p.Ajouter,{'attr':{'class':'btn btn-primary'}})}}
                        {{ form_end(p) }}
                        </div>
                        </div>
			</div>
		</div>
	</div>
</section>
{% endblock %}
