{% extends 'base.html.twig' %}

{% block title %}Person index{% endblock %}

{% block body %}
    <h1>Person index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Email</th>
                <th>Password</th>
                <th>Gender</th>
                <th>Nationalite</th>
                <th>Role</th>
                <th>CreatedAt</th>
                <th>HasPlaces</th>
                <th>IsPartner</th>
                <th>Balance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.FullName }}</td>
                <td>{{ person.Email }}</td>
                <td>{{ person.Password }}</td>
                <td>{{ person.Gender }}</td>
                <td>{{ person.Nationalite }}</td>
                <td>{{ person.Role }}</td>
                <td>{{ person.CreatedAt ? person.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ person.HasPlaces ? 'Yes' : 'No' }}</td>
                <td>{{ person.IsPartner ? 'Yes' : 'No' }}</td>
                <td>{{ person.Balance }}</td>
                <td>
                    <a href="{{ path('app_person_crud_show', {'id': person.id}) }}">show</a>
                    <a href="{{ path('app_person_crud_edit', {'id': person.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_person_crud_new') }}">Create new</a>
{% endblock %}
