{% block content %}
	{{ form_start(connexion) }}
	<div class="mask d-flex align-items-center h-100 gradient-custom-3">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-12 col-md-9 col-lg-7 col-xl-6">
					<div class="card" style="border-radius: 15px;">
						<div class="card-body p-5 ">
							<h2 class="text-uppercase text-center mb-5">Se connecter</h2>
							<div class="card-body p-5">

								<div>{{ form_row(connexion.Email,{"attr":{'class':'form-control form-control-lg'},"label":"Email"}) }}</div>
								<div>{{ form_row(connexion.Password,{"attr":{'class':'form-control form-control-lg'},"label":"Password"}) }}</div>

							</div>
							<div>
								<input type="submit" class="btn btn-primary1 text-center" value="login">
							</div>
							<p class="text-center text-muted mt-5 mb-0">
							
									Mot de passe Oubli√©

							</p>
                                                    <p class="text-center text-muted mt-5 mb-0">vous n'avez pas de compte ? <a href="{{ path ('signup') }}" class="fw-bold text-body"><u>Se connecter</u></a></p>
				
						</div>
						<div>
							{{ form_widget(connexion) }}
						</div>
						{{ form_end(connexion) }}
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}

<style>
        .modal {
            display: none;
            position: fixed;
            z-index: 8;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, 0.4);
        }
        .modal-content {
            margin: 50px auto;
            border: 1px solid #999;
            width: 60%;
        }
        h2,
        p {
            margin: 0 0 20px;
            font-weight: 400;
            color: #999;
        }
        span {
            color: #666;
            display: block;
            padding: 0 0 5px;
        }
        form {
            box-shadow: 0 2px 5px #f5f5f5;
            background-image:url('{{ asset('FrontOffice/images/LOGIN.PNG') }}')
        }
        input,
        textarea {
            width: 90%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #1c87c9;
            outline: none;
        }
