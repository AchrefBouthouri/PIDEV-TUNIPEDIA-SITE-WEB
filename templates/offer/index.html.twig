{% extends 'base.html.twig' %}

{% block title %}Offer index{% endblock %}

{% block content %}
    <h1>Offer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_Debut</th>
                <th>Date_Fin</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td>{{ offer.id }}</td>
                <td>{{ offer.DateDebut ? offer.DateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ offer.DateFin ? offer.DateFin|date('Y-m-d') : '' }}</td>
                <td>{{ offer.Montant }}</td>
                <td>
                    <a href="{{ path('app_offer_show', {'id': offer.id}) }}">show</a>
                    <a href="{{ path('app_offer_edit', {'id': offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_offer_new') }}">Create new</a>
{% endblock %}
