{% extends 'base.html.twig' %}

{% block content %}
	<section class="featured_services py-5">
		<h3 class="heading text-center mb-5">Our Places</h3>
		<div class="container py-3">
			<div class="row agile_inner_info">
				{% for i in places %}
                 {% if i.Status == 1 %}
					<div class="col-lg-4 col-md-6 mt-md-0 mt-5 w3_agile_services_grid">
						<div class="agile_services_grid">
							<div class="hover06 column">
								<div>
									<figure><img src="{{ asset('FrontOffice/images/s2.jpg') }}" alt=" " class="img-responsive"></figure>
								</div>
							</div>
							{% if i.Type == "Public" %}
								<div class="agile_services_grid_pos">
									<i class="fa fa-institution" aria-hidden="true"></i>
								</div>
							{% else %}
								<div class="agile_services_grid_posPrivate">
									<i class="fa fa-cutlery" aria-hidden="true"></i>
								</div>
							{% endif %}

						</div>
						<h4>{{ i.Name }}</h4>
						<p>{{ i.Description }}</p>
					</div>

                {% endif %}
				{% endfor %}
			</div>
		</div>
	</section>

{% endblock %}
